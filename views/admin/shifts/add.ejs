<!-- html starting tage and sidebar main content div -->
<%- include('../partials/sidebar') %>

  <!-- Topbar -->
  <%- include('../partials/topbar') %>

    <!-- Content -->
    <main class="main p-3">
      <div class="d-flex justify-content-between p-3 m-2">
        <h4 class="page-title">Shifts</h4>
        <a class="btn btn-primary text-center rounded-pill" href="/admin/shifts" role="button"><i class="fa-solid fa-arrow-left"></i> Back</a>
      </div>
      <form action="/admin/shifts/add" method="post" class="p-5">
        <div class="row">
          <div class="col">
            <label for="startTime" class="form-label">Start Time</label>
            <input type="time" class="form-control" id="startTime" name="startTime"></label>
          </div>
          <div class="col">
            <label for="endTime" class="form-label">End Time</label>
            <input type="time" class="form-control" id="endTime" name="endTime"></label>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col">

         
          <label class="gen-label">Status</label>
          <div>
            <label class="me-3 mt-1"><input type="radio" name="statusShift" value="active" checked> Active</label>

            <label><input type="radio" name="statusShift" value="inactive"> Inactive</label>
          </div>
        </div>
        </div>
        <div class="d-flex justify-content-center">

          <button type="submit" class="btn btn-primary ">ADD SHIFT</button>
        </div>
      </form>

    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>