<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>

   <!-- Bootstrap CSS from CDN -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
   <!-- Custom CSS -->
   <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <div class="signup-container w-400 p-3 shadow-lg rounded bg-white">
            <h2 class="text-center mb-1">Sign Up</h2>

            <!-- SignUp form -->
            <form action="/admin/auth/signup" method="post">
                <div class="mb-1">
                    <label for="firstName" class="form-label mb-1">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First Name">
                </div>
                <div class="mb-1">
                    <label for="lastName" class="form-label mb-1">Last Name</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last Name">
                </div>
                <div class="mb-1">
                    <label for="email" class="form-label mb-1">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">
                </div>
                <div class="mb-1 ">
                    <label for="password" class="form-label mb-1">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <input type="submit" class="btn btn-primary w-100 mt-2" value="Sign Up">
            </form>

            <p class="text-center mt-1 mb-1">Already have an account? <a class=" link-primary link-opacity-2" href="/admin/auth/login">Login now</a></p>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js from CDN (defer loading) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>